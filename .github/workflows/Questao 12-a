	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int i,j,a,b;
		System.out.println("DIGITE PARA LINHAS, E DEPOIS COLUNAS: ");
		a=sc.nextInt();System.out.printf("");
		b=sc.nextInt();
		
	  for(i=0;i<a;i++) {
		 
		  for(j=0;j<b;j++) {
			  if(i==j || j<i) {
				  System.out.printf("*");
			  }else {
				  System.out.printf(" ");
			  }
		  }
		  System.out.print("\n");
	  }
		
		 
	}
